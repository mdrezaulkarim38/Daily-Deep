@model Daily_Deep.Models.Category

<h3 class="text-center">Edit Category</h3>
<div>
    <form method="post" asp-action="EditCategory" asp-route-id="@Model.Id">
        <div class="form-group mb-3">
            <label asp-for="CategoryName"></label>
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="CategoryCode"></label>
            <input asp-for="CategoryCode" class="form-control" readonly />
            <span asp-validation-for="CategoryCode" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <button type="submit" class="btn btn-sm btn-primary">Save Changes</button>
             <a asp-controller="Account" asp-action="Category" class="btn btn-sm btn-secondary">Go Back</a>
        </div>
    </form>
</div>

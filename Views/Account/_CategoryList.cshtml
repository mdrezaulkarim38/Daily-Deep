@model IEnumerable<Daily_Deep.Models.Category>

<h3 class="text-center">Category List</h3>
<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Category Code</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.CategoryName</td>
                    <td>@category.CategoryCode</td>
                    <td>
                        <a href="@Url.Action("EditCategory", new { id = category.Id })" class="btn btn-sm btn-primary">Edit</a>
                        <form method="post" asp-action="DeleteCategory" asp-route-id="@category.Id" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this category?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
